<div id="password-section" class="form-group" style="display: none;">
  <div class="email-display-container">
    <div class="pfp-placeholder">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"></path></svg>
    </div>
    <strong id="displayed-email"></strong>
  </div>
  <label for="password">Password</label>
  <input type="password" id="password" name="password" placeholder="Enter your password" required />

  <a href="#" class="forgot-password-link" style="display: none;">Forgot password?</a>
</div>

<style>
  /* Container for the email display */
  .email-display-container {
    display: flex;
    align-items: center;
    padding: 1rem 0.95rem;
    border: 1.7px solid #24262a;
    border-radius: 7px;
    margin-bottom: 2rem;
    background-color: var(--bg-primary);
    color: var(--text-primary);
  }

  /* Placeholder for profile picture */
  .pfp-placeholder {
    width: 31px;
    height: 31px;
    border-radius: 50%;
    background-color: #cccccc; /* Placeholder background color */
    color: #666666; /* Placeholder icon color */
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 0.8rem; /* Space between pfp and email */
  }

  .pfp-placeholder svg {
    width: 18px;
    height: 18px;
    fill: currentColor;
  }

  /* Styling for the displayed email text */
  #displayed-email {
    font-size: 1.05rem;
    font-weight: 550;
    color: var(--text-primary);
  }

  /* Input field styling */
  input[type="password"] {
    width: 100%;
    padding: 1.1rem 0.95rem;
    border: 1.7px solid #5e636d;
    border-radius: 7px;
    font-size: 1rem;
    color: var(--text-primary);
    background-color: var(--bg-primary);
    transition: border-color 0.2s ease-in-out;
  }

  /* Input focus state */
  input[type="password"]:focus {
    outline: none;
    border-color: var(--primary);
  }

  /* Placeholder text color */
  input::placeholder {
    color: var(--text-secondary);
    opacity: 0.8;
  }

  /* Forgot password link styling */
  .forgot-password-link {
    display: block;
    text-align: left;
    color: #4285F4;
    margin-bottom: 41.2px;
    text-decoration: none;
    font-size: 1.03rem;
    margin-top: 1.6rem;
    transition: color 0.2s ease-in-out;
  }

  /* Show forgot password link when password section is visible */
  #password-section[style*="display: block"] .forgot-password-link {
      display: block !important; /* Ensure it overrides any other display rule */
  }

  .forgot-password-link:hover {
    color: #357AE8; /* Darker blue on hover */
  }
</style> 