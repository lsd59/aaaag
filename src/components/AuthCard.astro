---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<div class="auth-card-container">
  <div class="auth-card">
    {title && <h2>{title}</h2>}
    <slot />
  </div>
</div>

<style>
  .auth-card-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    margin-top: -100px;
  }

  .auth-card {
    padding: 1.8rem 2rem;
    border-radius: 19px;
    border: 1px solid var(--border-primary);
    width: 100%;
    max-width: 442.4px;
    color: var(--text-primary);
    text-align: center;
    margin-bottom: -5rem;
  }

  h2 {
    text-align: left;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
    font-size: 1.5rem;
    font-weight: 600;
  }
</style> 